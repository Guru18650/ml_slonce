<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ml_slonce.MainPage"
             Title="Czas dnia">

    <StackLayout Padding="5" x:Name="sl">
        <Button Text="Pobierz z GPS" x:Name="gD" Clicked="gD_Clicked" Margin="10"/>
        <Label Text="Długość geograficzna"/>
        <Entry x:Name="lonE" Placeholder="40.5823"/>
        <Label Text="Szerokość geograficzna"/>
        <Entry x:Name="latE" Placeholder="19.2056"/>
        <Button Text="Pobierz dane" Clicked="Button_Clicked" Margin="10"/>
        <Label x:Name="lbl" FontSize="20" HorizontalTextAlignment="Center" Margin="10"/>
    </StackLayout>

</ContentPage>
